# Docker environment settings for local development
NODE_ENV=production
HTTPS=false
GENERATE_SOURCEMAP=false

# Local development API configuration
# Using placeholder URLs that won't cause the app to fail
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_BACKEND_URL=http://localhost:8000
REACT_APP_SOCKET_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=15000
REACT_APP_SECURE=false
REACT_APP_ENV=development
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_EXHIBITOR_FEATURES=true

# Disable strict host checking for Docker
DANGEROUSLY_DISABLE_HOST_CHECK=true
