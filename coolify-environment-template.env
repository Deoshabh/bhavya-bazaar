# =================================================================
# COOLIFY ENVIRONMENT VARIABLES TEMPLATE
# Bhavya Bazaar E-Commerce Platform with Redis Integration
# =================================================================

# Instructions:
# 1. Copy these variables to your Coolify environment configuration
# 2. Replace placeholder values with your actual configuration
# 3. Generate secure random values for secrets and passwords
# 4. Ensure consistent values across all services

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================

NODE_ENV=production
PORT=8000

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=GENERATE_SECURE_MONGO_PASSWORD_HERE
DB_URL=mongodb://admin:GENERATE_SECURE_MONGO_PASSWORD_HERE@mongo:27017/bhavyabazaar?authSource=admin

# =================================================================
# REDIS CACHE CONFIGURATION
# =================================================================

# Redis Connection
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_SECURE_REDIS_PASSWORD_HERE
REDIS_URL=redis://:GENERATE_SECURE_REDIS_PASSWORD_HERE@redis:6379
REDIS_DB=0

# Redis Performance Settings
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_MAX_CONNECTIONS=50
REDIS_MIN_CONNECTIONS=5

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_COMPRESSION_ENABLED=true
CACHE_COMPRESSION_THRESHOLD=1024
CACHE_ANALYTICS_ENABLED=true

# =================================================================
# SESSION MANAGEMENT
# =================================================================

SESSION_SECRET=GENERATE_32_CHARACTER_SESSION_SECRET_HERE
SESSION_TTL=1800

# =================================================================
# AUTHENTICATION & SECURITY
# =================================================================

JWT_SECRET_KEY=GENERATE_32_CHARACTER_JWT_SECRET_HERE
ACTIVATION_SECRET=GENERATE_32_CHARACTER_ACTIVATION_SECRET_HERE

# =================================================================
# CORS CONFIGURATION
# =================================================================

# Update with your actual domain(s)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# =================================================================
# EMAIL CONFIGURATION (Optional)
# =================================================================

SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@yourdomain.com

# =================================================================
# PAYMENT GATEWAY CONFIGURATION (Optional)
# =================================================================

# Stripe Configuration
STRIPE_API_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# PayPal Configuration (if used)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=production

# =================================================================
# FRONTEND CONFIGURATION
# =================================================================

REACT_APP_BACKEND_URL=https://api.yourdomain.com
REACT_APP_ENVIRONMENT=production
REACT_APP_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# =================================================================
# FILE UPLOAD CONFIGURATION
# =================================================================

MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# =================================================================
# LOGGING CONFIGURATION
# =================================================================

LOG_LEVEL=info
LOG_FILE=/app/logs/application.log
ERROR_LOG_FILE=/app/logs/error.log

# =================================================================
# SECURITY HEADERS
# =================================================================

SECURE_HEADERS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =================================================================
# INSTRUCTIONS FOR GENERATING SECURE VALUES
# =================================================================

# To generate secure passwords and secrets, use these commands:
# 
# For passwords (32 characters):
# openssl rand -base64 32
# 
# For secrets (64 characters):
# openssl rand -base64 64
# 
# Or use online tools like:
# https://www.random.org/passwords/
# https://passwordsgenerator.net/

