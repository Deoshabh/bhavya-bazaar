# Production Environment Configuration for Backend
NODE_ENV=production
PORT=8000

# Database Configuration
DB_URI=mongodb://localhost:27017/bhavya-bazaar

# JWT Secrets
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_EXPIRES=7d
ACTIVATION_SECRET=your-activation-secret-here

# CORS Configuration for Production
# Fixed formatting - removed extra spaces and duplicates, added api subdomain
CORS_ORIGIN=https://bhavyabazaar.com,https://www.bhavyabazaar.com,https://api.bhavyabazaar.com

# WebSocket Origins removed - using CORS_ORIGIN instead to avoid conflicts

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMPT_HOST=smtp.gmail.com
SMPT_PORT=465
SMPT_PASSWORD=your-email-password
SMPT_MAIL=your-email@gmail.com

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-here
